<UserControl x:Class="Project.MVVM.View.PracownicyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Project.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#1F2644">
    <Border Background="#1F2644" CornerRadius="20" Margin="20">
        <StackPanel Margin="20" Background="#1F2644">

            <Label Content="Zarządzanie Pracownikami" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator Background="White"></Separator>
            <DataGrid IsReadOnly="True" x:Name="PracownicyGrid"  Margin="10,10,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="700" Height="283" Background="#1F2644">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type DataGridColumnHeader}" >
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#7F95D1"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderThickness" Value="0,0,1,2"/>
                        <Setter Property="BorderBrush" Value="#7F95D1"/>


                    </Style>
                    <Style TargetType="{x:Type DataGridRow}" >
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="Background" Value="#7F95D1"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="BorderBrush" Value="#7F95D1"/>
                        
                    </Style>
                </DataGrid.Resources>
                <DataGrid.Columns  >
                    <DataGridTextColumn   Width="44"  />
                    <DataGridTextColumn Header="Imie" Binding="{Binding Imie_pracownika}"  Width="100"/>
                    <DataGridTextColumn Header="Nazwisko" Binding="{Binding Nazwisko_pracownika}"  Width="100"/>
                    <DataGridTextColumn Header="Rola"   Binding="{Binding Rola_pracownika}" Width="100"/>
                    <DataGridTextColumn Header="Zarobki"  Binding="{Binding Zarobki_pracownika}"  Width="100"/>
                    <DataGridTextColumn Header="Czy Pracuje"   Binding="{Binding Czy_pracuje}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>



        </StackPanel>
    </Border>
</UserControl>
