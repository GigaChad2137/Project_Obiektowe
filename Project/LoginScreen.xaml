<Window x:Class="Project.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project"
        mc:Ignorable="d"
        Title="Login" Height="359" Width="300" FontSize="14" WindowStyle="SingleBorderWindow" FontFamily="/Fonts/#Poppins" Background="#272537" ResizeMode="NoResize" AllowsTransparency="False" >
    <Border Background="#272537" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator Background="White"></Separator>
            <Label Content="Username" Foreground="White"></Label>
            <TextBox Name="txtUsername" Background="WhiteSmoke" Foreground="Black" FontSize="18"></TextBox>
            <Label Content="Password" Foreground="White"></Label>
            <PasswordBox Name="txtPassword" Background="WhiteSmoke" Foreground="Black" FontSize="18"></PasswordBox>
            <Button x:Name="btnSubmit" Click="btnSubmit_Click" Content="Zaloguj" Margin="50 25" Background="WhiteSmoke"    Foreground="Black" FontSize="18"/>
        </StackPanel>
    </Border>
</Window>
